

<div class="panel">
  <div class="panel-heading">
    <h1><%= @project.name %></h1>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3">
        <h3>Skill Used: <%= @project.skill.name %> </h3>
        <p>
          <%= @project.skill.description %>
        </p>
      </div>
      <div class="col-md-9 text-right">
        <h3>Project Description</h3>
        <p><%= @project.description %></p>
      </div>
    </div>
  </div>
  <div class="btn-group btn-group-sm btn-group-justified">
  <%= link_to "View this Project on Github", @project.github_url, class: "btn btn-custom" %>
  <%= link_to "View this Project hosted live", @project.live_url, class: "btn btn-custom" %>
  <%= link_to "Edit #{@project.name}", edit_project_path(@project), class: "btn btn-custom" %>
  <%= link_to "Delete #{@project.name}", project_path(@project), class: "btn btn-custom",
                                  data: { confirm: "Are you sure you want to delete this project?", method: "delete" }%>

  </div>
</div>
