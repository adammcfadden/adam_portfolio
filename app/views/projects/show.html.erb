<div class="panel">
  <div class="panel-heading">
    <h1 class="page-header"><%= @project.name %><span style="float: right">By: <%= link_to @project.user.first_name, user_path(@project.user) %></span></h1>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3">
        <% if @project.skill %>
        <h3>Skill Used: <%= link_to @project.skill.name, skill_path(@project.skill) %> </h3>
        <p>
          <%= @project.skill.summarize %>
        </p>
        <% else %>
        <h3>Skill Used: </h3>
        <p>
          This Project is not attached to any skill, please edit the project and add a skill.
        </p>
        <% end %>
      </div>
      <div class="col-md-9 text-right">
        <h3>Project Description</h3>
        <p><%= @project.description %></p>
      </div>
    </div>
  </div>
  <div class="btn-group btn-group-sm btn-group-justified">
  <%= link_to "View this Project on Github", @project.github_url, class: "btn btn-success" %>
  <%= link_to "View this Project hosted live", @project.live_url, class: "btn btn-primary" %>
  <%= link_to "Edit #{@project.name}", edit_project_path(@project), class: "btn btn-warning" %>
  <%= link_to "Delete #{@project.name}", project_path(@project), class: "btn btn-danger",
                                  data: { confirm: "Are you sure you want to delete this project?", method: "delete" }%>

  </div>
</div>
