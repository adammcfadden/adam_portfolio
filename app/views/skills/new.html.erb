<div class="panel">
  <div class="row">
    <div class="col-md-3">
      <div class="panel-heading">

      <h1>Current Skills</h1>
      </div>
      <div class="panel-body">

        <ul>
        <% if @skills != nil && @skills.length > 0 %>
          <% @skills.each do |skill| %>
            <li><%= link_to skill.name, skill_path(skill) %></li>
          <% end %>
        <% else %>
          <p>
            No Skills Added Yet.
          </p>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-9">
      <div class="panel-heading">
        <h1>Add a New Skill</h1>
      </div>
      <div class="panel-body">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>
