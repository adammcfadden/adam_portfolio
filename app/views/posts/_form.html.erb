<%= render "layouts/errors", object: @post %>

<%= bootstrap_form_for(@post) do |f| %>
  <%= f.text_field :name, placeholder: "Post Name" %>
  <%= f.text_area :body, placeholder: "Enter a Post", rows: "12"%>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit class: "btn-primary btn-block" %>
<% end %>
